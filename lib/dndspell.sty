\newcommand{\spellheader}[9]{
  \addcontentsline{toc}{section}{#1}
  \subtitlesection{#1}{#2}
  \vspace{-1ex} % subtitlesection artefact; topsep also changes bottom spacing.
  \begin{description}[font=\normalfont\textbf,noitemsep,topsep=1ex,leftmargin=1em,align=right,labelwidth=3.5cm]
    \item[\spellcastingtimename:] #3
    \item[\spellrangename:] #4
    \item[\spellcomponentsname:] #5
    \item[\spelltargetname:] #6
    \item[\spelldurationname:] #7
    \item[\spellsavename:] #8
    \item[\spellresistancename:] #9
  \end{description}
}

\newenvironment{spell}[9]
  {\spellheader{#1}{#2}{#3}{#4}{#5}{#6}{#7}{#8}{#9}}
  % Environment encloses description.
{\vspace{\baselineskip}}
